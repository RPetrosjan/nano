{% extends 'base.html.twig' %}
{% block title %} Nanuliks {% endblock %}
{% block body %}
     <div class="blocknano">

         <div>
             {% if typeSection != null  %}
                <h2 id="typeSection" idType="{{ typeSection.id }}">{{ typeSection.title }}</h2>
             {% endif %}

             <div class="offcanvas offcanvas-start bg-dark  w-100" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
                 <div class="offcanvas-header">
                     <h5 class="offcanvas-title" id="doc_title"></h5>
                     <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                 </div>
                 <div id="doc" class="offcanvas-body text-white">
                 </div>
             </div>

             <div id="showalert" class="alert alert-success alert-dismissible fade" role="alert">
                 <strong>Bravo!</strong>
             </div>
             <div class="stat">
                 <div><span id="step">1</span> / <span id="qtotal">15</span></div>
                 <div class="progress">
                     <div id="rht" class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="3" aria-valuemin="0" aria-valuemax="100">0</div>
                     <div id="fht" class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100">0</div>
                 </div>

             </div>
             <div class="title">Affame</div>
             <div class="titleshadow">Affame</div>
             <div id="select" class="selectors">
                 <div>Бояться</div>
                 <div>Мечтать</div>
                 <div>Голодный</div>
                 <div>Тянуть</div>
             </div>

             <div class="d-flex justify-content-between mt-5">
                 <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
                     View Doc
                 </button>
                 <button id="valider" class="btn bgred">
                     Valider
                 </button>
                 </div>
         </div>
     </div>
 {% endblock %}